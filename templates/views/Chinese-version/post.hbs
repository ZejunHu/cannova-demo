<style>
p, h1, h2, h3, h4, h5, h6, a {
	font-family: Yahei;
}
</style>
<!-- Header -->
	<header>

		<!-- Nav -->
		<nav id="nav" class="navbar">
			<div class="container">

				<div class="navbar-header">
					<!-- Logo -->
					<div class="navbar-brand">
						<a href="/zh-CN">
							<img class="logo" src="/images/logo-alt.png" alt="logo">
						</a>
					</div>
					<!-- /Logo -->

					<!-- Collapse nav button -->
					<div class="nav-collapse">
						<span></span>
					</div>
					<!-- /Collapse nav button -->
				</div>

				<!--  Main navigation  -->
				<ul class="main-nav nav navbar-nav navbar-right">
					<li><a href="/zh-CN/#home">首页</a></li>
					<li><a href="/zh-CN/#about">公司简介</a></li>
					<li><a href="/zh-CN/#portfolio">移民类别</a></li>
					<li><a href="/zh-CN/#service">服务项目</a></li>
					<li><a href="/zh-CN/#team">加星团队</a></li>
					<li><a href="/zh-CN/blog">最新资讯</a>
						<!-- <ul class="dropdown">
							<li><a href="#">blog post</a></li>
						</ul> -->
					</li>
					<li><a href="/zh-CN/#contact">联系我们</a></li>
					<li><a href="/assessment">在线评估</a></li>
					<li><a href="/">English</a></li>
				</ul>
				<!-- /Main navigation -->

			</div>
		</nav>
		<!-- /Nav -->

		<!-- header wrapper -->
		<div class="header-wrapper sm-padding bg-grey">
			<div class="container">
				<h2>{{data.post.title}}</h2>
				<ul class="breadcrumb">
					<li class="breadcrumb-item"><a href="/zh-CN">首页</a></li>
					<li class="breadcrumb-item"><a href="/zh-CN/blog">最新资讯</a></li>
					<li class="breadcrumb-item active">{{data.post.title}}</li>
				</ul>
			</div>
		</div>
		<!-- /header wrapper -->

	</header>
	<!-- /Header -->

	<!-- Blog -->
	<div id="blog" class="section md-padding">

		<!-- Container -->
		<div class="container">

			<!-- Row -->
			<div class="row">

				<!-- Main -->
				<main id="main" class="col-md-9">
					<div class="blog">
						{{#if data.post.image}}
						<div class="blog-img">
							<img class="img-responsive" src="{{{cloudinaryUrl data.post.image crop='fit' }}}" alt="">
						</div>
						{{/if}}
						<div class="blog-content">
							<ul class="blog-meta">
								{{#if data.post.author}}
								<li><i class="fa fa-user"></i>{{data.post.author.name.first}} {{data.post.author.name.last}}</li>
								{{/if}}
								<li><i class="fa fa-clock-o"></i>{{date data.post.publishedDate}}</li>
								{{#if data.post.categories}}<li><i class="fa fa-tags"></i>{{data.post.categories.0.name}}</li>{{/if}}
								<!-- <li><i class="fa fa-comments"></i>57</li> -->
							</ul>
							<!-- <h3>{{data.post.title}}</h3> -->
							<p>{{{data.post.content.extended}}}</p>
						</div>

						<div class="text-center" style="margin-top: 2rem;">
							<a href="/zh-CN/blog" class="btn main-btn">返回</a>
						</div>

					</div>
				</main>
				<!-- /Main -->


				<!-- Aside -->
				<aside id="aside" class="col-md-3">

					<!-- Search -->
					<div class="widget">
						<div class="widget-search">
							<form role="search" action="/zh-CN/blog" method="GET">

									<input class="search-input" type="text" placeholder="搜索" id="keywords" name="keywords">
									<button class="search-btn" type="submit"><i class="fa fa-search"></i></button>

							</form>
						</div>
					</div>
					<!-- /Search -->

					<!-- Category -->
					<div class="widget">
						<h3 class="title">目录</h3>
						<div class="widget-category">
							<a href="/zh-CN/blog">全部分类</a>
							{{# each data.categories }}
							<a href="{{categoryUrlChinese key}}">{{name}}</a>
							{{/each}}
						</div>
					</div>
					<!-- /Category -->
				</aside>
				<!-- /Aside -->

			</div>
			<!-- /Row -->

		</div>
		<!-- /Container -->

	</div>
	<!-- /Blog -->
