<!-- Header -->
	<header>

		<!-- Nav -->
		<nav id="nav" class="navbar">
			<div class="container">

				<div class="navbar-header">
					<!-- Logo -->
					<div class="navbar-brand">
						<a href="/">
							<img class="logo" src="/images/logo-alt.png" alt="logo">
						</a>
					</div>
					<!-- /Logo -->

					<!-- Collapse nav button -->
					<div class="nav-collapse">
						<span></span>
					</div>
					<!-- /Collapse nav button -->
				</div>

				<!--  Main navigation  -->
				<ul class="main-nav nav navbar-nav navbar-right">
					<li><a href="/#home">Home</a></li>
					<li><a href="/#about">About</a></li>
					<li><a href="/#portfolio">Categories</a></li>
					<li><a href="/#service">Services</a></li>
					<li><a href="/#team">Team</a></li>
					<li><a href="/blog">News</a></li>
					<li><a href="/#contact">Contact</a></li>
					<li><a href="/assessment">Assessment</a></li>
					<li><a href="/zh-CN">中文</a></li>
				</ul>
				<!-- /Main navigation -->

			</div>
		</nav>
		<!-- /Nav -->

		<!-- header wrapper -->
		<div class="header-wrapper sm-padding bg-grey">
			<div class="container">
				<h2>{{data.post.title}}</h2>
				<ul class="breadcrumb">
					<li class="breadcrumb-item"><a href="/">Home</a></li>
					<li class="breadcrumb-item"><a href="/blog">Recent News</a></li>
					<li class="breadcrumb-item active">{{data.post.title}}</li>
				</ul>
			</div>
		</div>
		<!-- /header wrapper -->

	</header>
	<!-- /Header -->

	<!-- Blog -->
	<div id="blog" class="section md-padding">

		<!-- Container -->
		<div class="container">

			<!-- Row -->
			<div class="row">

				<!-- Main -->
				<main id="main" class="col-md-9">
					<div class="blog">
						{{#if data.post.image}}
						<div class="blog-img">
							<img class="img-responsive" src="{{{cloudinaryUrl data.post.image crop='fit' }}}" alt="">
						</div>
						{{/if}}
						<div class="blog-content">
							<ul class="blog-meta">
								{{#if data.post.author}}
								<li><i class="fa fa-user"></i>{{data.post.author.name.first}} {{data.post.author.name.last}}</li>
								{{/if}}
								<li><i class="fa fa-clock-o"></i>{{date data.post.publishedDate}}</li>
								{{#if data.post.categories}}<li><i class="fa fa-tags"></i>{{data.post.categories.0.name}}</li>{{/if}}
								<!-- <li><i class="fa fa-comments"></i>57</li> -->
							</ul>
							<!-- <h3>{{data.post.title}}</h3> -->
							<p>{{{data.post.content.extended}}}</p>
						</div>


					</div>
				</main>
				<!-- /Main -->


				<!-- Aside -->
				<aside id="aside" class="col-md-3">

					<!-- Search -->
					<div class="widget">
						<div class="widget-search">
							<form role="search" action="/blog" method="GET">

									<input class="search-input" type="text" placeholder="search" id="keywords" name="keywords">
									<button class="search-btn" type="submit"><i class="fa fa-search"></i></button>

							</form>
						</div>
					</div>
					<!-- /Search -->

					<!-- Category -->
					<div class="widget">
						<h3 class="title">Category</h3>
						<div class="widget-category">
							<a href="/blog">All Categories</a>
							{{# each data.categories }}
							<a href="{{categoryUrl key}}">{{name}}</a>
							{{/each}}
						</div>
					</div>
					<!-- /Category -->
				</aside>
				<!-- /Aside -->

			</div>
			<!-- /Row -->

		</div>
		<!-- /Container -->

	</div>
	<!-- /Blog -->
